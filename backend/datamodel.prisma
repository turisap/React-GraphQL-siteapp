enum Permission {
  ADMIN
  USER
  ITEMDELETE
  ITEMUPDATE
  ITEMCREATE
  PERMISSIONSUPDATE
}

enum JobGroup {
 SURVEY
 FOUNDATION
 STRUCTURAL_STEEL
 STRUCTURAL_CONCRETE
 FITIN
 PLUMBING
 ELECTRICAL
 HANDOVER
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  occupation : Occupation!
  permissions: [Permission] @scalarList(strategy: RELATION)
  image: String!
  largeImage: String!
  organisation: Organisation!
  phone: String!,
  resetToken: String,
  resetTokenExpiry: Float
  verificationEmailToken: String @unique
  emailVerified : Boolean! @default(value : false)
  projects : [Project]!
}

type Project {
  id: ID! @id
  title: String!
  address: String!
  levels_number: Float!
  image: String!
  largeImage: String!
  owner: User!
}

type Job {
 id: ID! @id
 project: Project!
 title: String!
 level: Float!
 unit: String!
 tag: Tag!
 image: String
 largeImage: String
 assignee: User
 description : String
}

type Tag {
 id: ID! @id
 title: String!
 jobGroup: JobGroup!
}

type Occupation {
 id : ID! @id
 title : String!
}

type Organisation {
 id: ID! @id,
 title : String!
 address : String!
 image: String!
 largeImage: String!
}


type SuccessMessage {
   id: ID! @id
   message : String!
   user : User!
}
