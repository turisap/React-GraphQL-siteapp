enum Permission {
  ADMIN
  USER
  ITEMDELETE
  ITEMUPDATE
  ITEMCREATE
  PERMISSIONSUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  permissions: [Permission] @scalarList(strategy: RELATION)
  image: String!
  largeImage: String!
  organisation: String!
  phone: String!,
  resetToken: String,
  resetTokenExpiry: Float
  verificationEmailToken: String @unique
  emailVerified : Boolean! @default(value : false)
  projects : [Project]!
}

type Project {
  id: ID! @id
  title: String!
  address: String!
  levels_number: Float!
  image: String!
  largeImage: String!
  owner: User!
}


type SuccessMessage {
   id: ID! @id
   message : String!
}
